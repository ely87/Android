<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/promo_calendar_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/promo_calendar_days"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#454545"
        android:text="ggfsgdf"
        android:textSize="16dip"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/promo_calendar_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/promo_calendar_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="#C7E642"
        android:padding="10dp"
        android:text="Days"
        android:textColor="#ffffff"
        android:textSize="18dip"
        android:textStyle="bold" />

</RelativeLayout>