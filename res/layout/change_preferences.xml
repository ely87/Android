<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textPreferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Mis preferencias"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#454545"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tablePreferences"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textPreferencias"
        android:layout_below="@+id/textPreferencias"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_borders"
        android:stretchColumns="0" >

        <TableRow
            android:id="@+id/rowPreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textPreference"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Categoria" >
            </TextView>

            <CheckBox
                android:id="@+id/checkPreference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </CheckBox>
        </TableRow>
    </TableLayout>

</RelativeLayout>